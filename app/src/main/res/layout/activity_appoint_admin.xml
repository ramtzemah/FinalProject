<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fire_appoint_admin"
    tools:context=".AdminsLogic.AppointAdmin">
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="centerInside"
        android:background="@null"
        app:tint="@color/white"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="מנה מנהל"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        android:fontFamily="@font/varsity_regular"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/admins_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="רשימת מנהלים"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/id_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:layout_below="@id/admins_label"
        android:inputType="number"
        android:hint="מספר ת.ז"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_blue"
        style="@style/CustomSpinnerStyle"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/id_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        android:background="@drawable/border_blue"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">

        <TextView
            android:id="@+id/idNumber"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/firstName"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lastName"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/gender"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/age"
            android:layout_marginTop="13dp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/city"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Spinner
        android:id="@+id/areasDropdown"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/CustomSpinnerStyle"/>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/areasDropdown"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/MB_searchAdminBtn"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="270dp"
        android:text="חפש"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:fontFamily="@font/varsity_regular"
        android:backgroundTint="#702963"
        app:icon="@drawable/ic_detect_parties"
        app:iconSize="60dp"
        app:iconGravity="end"
        app:iconPadding="-20dp"
        app:cornerRadius="45dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/areasDropdown"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/MB_appointAdminBtn"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"
        android:text="מנה"
        android:textColor="@color/white"
        android:fontFamily="@font/varsity_regular"
        android:backgroundTint="#702963"
        app:icon="@drawable/ic_appoint_admin_btn"
        app:iconSize="60dp"
        app:iconGravity="end"
        app:iconPadding="-20dp"
        app:cornerRadius="45dp"
        app:strokeWidth="0dp"
        />

        <com.google.android.material.button.MaterialButton
        android:id="@+id/MB_clean_search"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:text="נקה"
        android:textColor="@color/white"
        android:fontFamily="@font/varsity_regular"
        android:backgroundTint="#702963"
        app:icon="@drawable/ic_clean_search"
        app:iconSize="60dp"
        app:iconGravity="end"
        app:iconPadding="-20dp"
        app:cornerRadius="45dp"
        app:strokeWidth="0dp"
         />

    </LinearLayout>

</RelativeLayout>