<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    tools:context=".AdminsLogic.FireAdmin">

    <TextView
        android:id="@+id/admins_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:text="רשימת מנהלים"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/admins_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admins_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/admins_dropdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        android:background="@drawable/border_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/idNumber"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/firstName"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/lastName"
                android:layout_marginTop="13dp"
                android:textColor="@color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/gender"
                android:layout_marginTop="13dp"
                android:textColor="@color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/age"
                android:layout_marginTop="13dp"
                android:textColor="@color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/city"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/MB_fire_admin"
            android:layout_width="155dp"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="30dp"
            android:text="פטר מנהל אזור"
            android:textColor="@color/white"
            app:backgroundTint="#0068FF"
            app:cornerRadius="4dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MB_clean_search"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:text="נקה"
            android:textColor="@color/white"
            app:backgroundTint="#0068FF"
            app:cornerRadius="4dp"
            app:strokeWidth="0dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MB_searchAdminBtn"
            android:layout_width="155dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="חפש"
            android:textColor="@color/white"
            app:backgroundTint="#0068FF"
            app:cornerRadius="4dp" />
    </LinearLayout>

<!--    </LinearLayout>-->

</RelativeLayout>