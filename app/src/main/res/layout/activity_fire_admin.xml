<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fire_appoint_admin"
    tools:context=".AdminsLogic.FireAdmin">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="centerInside"
        android:background="@null"
        app:tint="@color/white"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="פטר מנהל"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        android:fontFamily="@font/varsity_regular"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/admins_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="רשימת מנהלים"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/admins_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admins_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:visibility="visible"
        style="@style/CustomSpinnerStyle"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/admins_dropdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardElevation="0dp"
        android:visibility="gone"
        android:background="@drawable/border_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/idNumber"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/firstName"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/lastName"
                android:layout_marginTop="13dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:gravity="end"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/gender"
                android:layout_marginTop="13dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:gravity="end"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/age"
                android:layout_marginTop="13dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:gravity="end"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/city"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/MB_fire_admin"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="20dp"
            android:text="פטר"
            android:textColor="@color/white"
            android:fontFamily="@font/varsity_regular"
            android:backgroundTint="#702963"
            app:icon="@drawable/ic_fire_admin_btn"
            app:iconSize="60dp"
            app:iconGravity="end"
            app:iconPadding="-20dp"
            app:cornerRadius="45dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MB_clean_search"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:text="נקה"
            android:textColor="@color/white"
            android:fontFamily="@font/varsity_regular"
            android:backgroundTint="#702963"
            app:icon="@drawable/ic_clean_search"
            app:iconSize="60dp"
            app:iconGravity="end"
            app:iconPadding="-20dp"
            app:cornerRadius="45dp"
            app:strokeWidth="0dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MB_searchAdminBtn"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:text="חפש"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:fontFamily="@font/varsity_regular"
            android:backgroundTint="#702963"
            app:icon="@drawable/ic_detect_parties"
            app:iconSize="60dp"
            app:iconGravity="end"
            app:iconPadding="-20dp"
            app:cornerRadius="45dp" />
    </LinearLayout>

<!--    </LinearLayout>-->

</RelativeLayout>