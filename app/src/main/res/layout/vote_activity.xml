<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/user_landing_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/infoButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_info"
            android:background="@drawable/circle_background"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:contentDescription="Info Button" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp">
            <com.tsuryo.androidcountdown.Counter
                android:id="@+id/counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:max_time_unit="DAY"
                app:text_color="@color/colorPrimary"
                app:text_size="36dp"
                android:layout_marginStart="200dp"
                app:custom_font="@font/digi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="150dp">
            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/varsity_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="5dp"

            android:layout_marginTop="150dp">


            <ImageButton
                android:id="@+id/MB_partyPlatformBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/ic_detect_parties"
                android:drawablePadding="8dp"
                android:padding="16dp" />

            <Space
                android:id="@+id/space1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/MB_voteBtn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_ballotbox"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/MB_manageBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/ic_admin"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="25dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
