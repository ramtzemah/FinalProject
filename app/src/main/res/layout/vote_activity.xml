<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/user_landing_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp">
        <com.tsuryo.androidcountdown.Counter
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:max_time_unit="DAY"
            app:text_color="@color/colorPrimary"
            app:text_size="36dp"
            android:layout_marginStart="200dp"
            app:custom_font="@font/digi" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/MB_partyPlatformBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_watch_parties"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="5dp" />

        <Space
            android:id="@+id/space1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/MB_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_home"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:clickable="false"/>

        <Space
            android:id="@+id/space2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/MB_voteBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_voting_box"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/MB_manageBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_admin_section"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="25dp"
            android:visibility="gone"
 />

    </LinearLayout>





</RelativeLayout>
